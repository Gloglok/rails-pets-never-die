<div class='container mx-auto'>
  <div class='row'>
    <div class='col-sm'>
    <%= simple_form_for @stuffed_animal do |f| %>
      <%= f.input :name, label: "Nom"%>
      <%= f.input :address, label: "Adresse"%>
      <%= f.input :description %>
      <%= f.input :species, label: "EspÃ¨ce" %>
      <%= f.input :price, label: "Prix /jour" %>
