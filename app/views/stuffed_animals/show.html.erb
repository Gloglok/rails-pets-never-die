<div class="show-container mt-3">
  <div class="d-flex">

    <div class="card-product card-show">
      <%= cl_image_tag @stuffed_animal.photo.key, crop: :fill %>
      <div class="card-product-infos">
        <p class="show-money-text">💰 <span id="price-per-day"><strong><%= @stuffed_animal.price %></strong></span>€ /jour</p>
        <h2 class="pb-3"><%= @stuffed_animal.name %></h2>
        <p>🐾 <%= @stuffed_animal.species.capitalize %></p>
        <p>📅 <%= @stuffed_animal.rebirth_date %></p>
        <p>🏋️ <%= @stuffed_animal.weight %>kg</p>
        <p>🙍 <%= @stuffed_animal.user.last_name.capitalize %></p>
        <p>📍 <%= @stuffed_animal.address %></p>
      </div>
    </div>

    <div class="form-wrapper ml-2 pl-4" style="width: 360px; margin: 0 auto;">
      <div id="reservation-form-div">
        <%= simple_form_for([@stuffed_animal, @reservation]) do |f| %>
          <%= f.input :start_date, as: :string, required: false, label: false, input_html: { id: "range_start", class: "d-none" }  %>
          <%= f.input :end_date, label: false, as: :string, required: false, input_html: { id: "range_end", class: "d-none" } %>
          <div class="mt-3 mr-4"><%= f.button :submit, "Réserver", class: "btn btn-primary btn-block"%></div>
        <% end %>
        <div class="d-block">
          <p class="mt-3">Réservation pour <strong><span id="total-days">0</span> jours</strong></p>
          <p>Prix total : <strong><span id="total-price">0</span> €</strong></p>
        </div>
      </div>
    </div>
  </div>

  <p class="mb-0 pl-3">Un peu d'histoire sur <strong><%= @stuffed_animal.name %></strong></p>
  <div class="card-product card-show card-show-description mt-0 mb-5">
    <p>❝<%= @stuffed_animal.description %>❝</p>
  </div>

  <div class="">
    <%# avis %>
    <%# map %>
  </div>

  <div class="btn btn btn-secondary mb-5">
    <%= link_to "Retour", stuffed_animals_path %>
  </div>
</div>
