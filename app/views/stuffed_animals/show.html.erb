<div class="container mt-5">
  <h1 class="mb-3"><%= @stuffed_animal.name %></h1>

  <div>
    <div class="card-product card-show">
      <%= cl_image_tag @stuffed_animal.photo.key, crop: :fill %>
      <div class="card-product-infos">
        <% [:species, :rebirth_date].each do |field| %>
          <p> <%= field.to_s.humanize %> : <%= @stuffed_animal.send(field) %></p>
        <% end %>
        <p>Weight : <%= @stuffed_animal.weight %>🏋️</p>
        <p>Price : <%= @stuffed_animal.price %>₿</p>
        <p>Owner name : <%= @stuffed_animal.user.last_name.capitalize %></p>
        <p>📍 <%= @stuffed_animal.address %></p>
      </div>
    </div>
  </div>

  <p class="mb-0 mt-5 pl-3">Un peu d'histoire sur <strong><%= @stuffed_animal.name %></strong></p>
  <div class="card-product card-show card-show-description mt-0 mb-5">
    <p>❝<%= @stuffed_animal.description %>❝</p>
  </div>

  <div class="">
    <%# avis %>
    <%# map %>
  </div>

  <div class="container">
    <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
      <h2>Choisir son animal</h2>

      <%= simple_form_for([@stuffed_animal, @reservation]) do |f| %>
        <%= f.input :start_date, as: :string, required: false, input_html: { id: "range_start" }  %>
        <%= f.input :end_date, as: :string, required: false, input_html: { id: "range_end" } %>
        <%= f.button :submit, "Réserver", class: "btn btn-primary" %>
      <% end %>
      <p>Réservation pour <span id="total-days">0</span> jours</p>
      <p>Prix total : <span id="total-price">0</span> ₿ </p>
    </div>
  </div>


  <div class="btn btn btn-secondary my-5">
    <%= link_to "Retour", stuffed_animals_path %>
  </div>
</div>
