<div class="index-container">
  <div class="index-cards mx-5">
    <h1 class="text-center m-5">💯% Affection <i class="text-danger">⭕% Entretien</i></h1>
    <% @stuffed_animals.each do |stuffed_animal| %>
      <%= link_to stuffed_animal_path(stuffed_animal) do%>
        <div class="card-product rounded" style="min-width: 460px">
        <%= cl_image_tag stuffed_animal.photo.key, crop: :fill, class:"card-index-img rounded" %>
          <div class="card-product-infos" style="width: 100%">
            <div class='d-flex justify-content-between align-items-start'>
              <h2><%= stuffed_animal.name %></h2>
              <p class="index-card-text mt-0"><span class='price-index-card'><%= stuffed_animal.price%> €</span><br><span class='d-flex justify-content-end'>/jour</span></p>
            </div>
            <p class="raiting">⭐ 4,79 (156 votes)</p>
            <p class="index-card-text mt-3 mb-1">📍<%= stuffed_animal.address%></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>


  <div id="map"
    style="width: 97%; height: 600px; rounded"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
